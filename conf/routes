GET      /monthly/region-errorType     controllers.DeviceController.geterrorType(id: String ?= "",month: String ?= "")
GET      /monthly/groupRegionByMonth   controllers.DeviceController.groupRegionByMonth(month: String ?= "",_typeNoc: String ?= "",_typeError: String ?= "")
GET      /monthly/ddownNoticeByStatus  controllers.DeviceController.drilldownNoticeByStatus(id: String ?= "",month: String ?= "")
GET      /monthly/dUpNoticeByStatus    controllers.DeviceController.drillUpNoticeByStatus(id: String ?= "",month: String ?= "")
GET      /monthly/ddOutlierByMonth     controllers.DeviceController.drilldownOutlierMonth(id: String ?= "",fromMonth: String ?= "",toMonth: String ?= "", db: String ?= "")
GET      /monthly/drilldownTotalInf    controllers.DeviceController.drilldownTotalInf(id: String ?= "",month: String ?= "")
GET      /monthly/drillUpTotalInf      controllers.DeviceController.drillUpTotalInf(id: String ?= "",month: String ?= "")
GET      /monthly/ddownSigLogMonth     controllers.DeviceController.drilldownSigLogMonth(id: String ?= "",month: String ?= "")
GET      /monthly/dUpSigLogmonth       controllers.DeviceController.drillUpSigLogmonth(id: String ?= "",month: String ?= "")
## tab Monthly-Top Province
GET      /monthly/getTopN              controllers.DeviceController.topNJson(month: String ?= "",_typeError: String ?= "",_typeService: String ?= "",_typeOLTpoor: String ?= "",_typeInftoperr: String ?="")
GET      /topN/region-errorKibana      controllers.DeviceController.getErrorKibana(id: String ?= "",month: String ?= "")
GET      /topN/region-serviceStatus    controllers.DeviceController.getserviceStatus(id: String ?= "",month: String ?= "")
