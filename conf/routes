GET      /drilldownTotalInf            controllers.DeviceController.drilldownTotalInf(id: String ?= "")
GET      /drillUpSigLogmonth           controllers.DeviceController.drillUpSigLogmonth(id: String ?= "")
GET      /drilldownSigLogMonth         controllers.DeviceController.drilldownSigLogMonth(id: String ?= "")
GET      /groupRegionByMonth           controllers.DeviceController.groupRegionByMonth(month: String ?= "",_typeNoc: String ?= "",_typeError: String ?= "")

GET      /region-countType             controllers.DeviceController.getcountType(id: String ?= "",month: String ?= "")
GET      /region-errorType             controllers.DeviceController.geterrorType(id: String ?= "",month: String ?= "")
GET      /topN-json                    controllers.DeviceController.topNJson(month: String ?= "")
GET      /inf/rejectLabel              controllers.DeviceController.rejectLabel(host: String ?= "",module: String ?= "",time: String ?= "",bras: String ?= "")
GET      /inf/confirmLabel             controllers.DeviceController.confirmLabel(host: String ?= "",module: String ?= "",time: String ?= "",bras: String ?= "")

GET      /searchBras                   controllers.DeviceController.search
POST     /searchBras                   controllers.DeviceController.getFormBras
GET      /bras                         controllers.BrasController.index
GET      /brasInfo                     controllers.BrasDetailController.index
GET      /device/realtime-bras         controllers.DeviceController.realtimeBras
GET      /host-json                    controllers.DeviceController.getHostJson(id: String ?= "")
GET      /bras-json                    controllers.DeviceController.getBrasJson(id: String ?= "")
GET      /confirmLabel                 controllers.BrasController.confirmLabel(id: String ?= "",time: String ?= "")
GET      /rejectLabel                  controllers.BrasController.rejectLabel(id: String ?= "",time: String ?= "")


