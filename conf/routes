### DEVICE
GET      /device                       controllers.DeviceController.overview
GET      /noc                          controllers.DeviceController.dashboard
GET      /inf                          controllers.DeviceController.inf(id: String ?= "")
GET      /inf-json                     controllers.DeviceController.getSigLogInfjson(id: String ?= "")
GET      /inf/exportCSV                controllers.DeviceController.exportCSV(date: String ?= "")
GET      /inf/getHostMonitor           controllers.DeviceController.getHostMonitor(host: String ?= "")
GET      /drilldownNoticeByStatus      controllers.DeviceController.drilldownNoticeByStatus(id: String ?= "",month: String ?= "")
GET      /drillUpNoticeByStatus        controllers.DeviceController.drillUpNoticeByStatus(id: String ?= "",month: String ?= "")
GET      /drillUpTotalInf              controllers.DeviceController.drillUpTotalInf(id: String ?= "",month: String ?= "")
GET      /drilldownTotalInf            controllers.DeviceController.drilldownTotalInf(id: String ?= "",month: String ?= "")
GET      /drillUpSigLogmonth           controllers.DeviceController.drillUpSigLogmonth(id: String ?= "",month: String ?= "")
GET      /drilldownSigLogMonth         controllers.DeviceController.drilldownSigLogMonth(id: String ?= "",month: String ?= "")
GET      /groupRegionByMonth           controllers.DeviceController.groupRegionByMonth(month: String ?= "",_typeNoc: String ?= "",_typeError: String ?= "")

GET      /region-countType             controllers.DeviceController.getcountType(id: String ?= "",month: String ?= "")
GET      /region-errorType             controllers.DeviceController.geterrorType(id: String ?= "",month: String ?= "")
GET      /region-errorKibana           controllers.DeviceController.getErrorKibana(id: String ?= "",month: String ?= "")
GET      /region-serviceStatus         controllers.DeviceController.getserviceStatus(id: String ?= "",month: String ?= "")
GET      /region-OltPoorconn           controllers.DeviceController.getOltPoorconn(id: String ?= "",month: String ?= "")
GET      /region-InfTopErr             controllers.DeviceController.getInfTopErr(id: String ?= "",month: String ?= "")
GET      /topN-json                    controllers.DeviceController.topNJson(month: String ?= "",_typeError: String ?= "",_typeService: String ?= "",_typeOLTpoor: String ?= "",_typeInftoperr: String ?="")
GET      /inf/rejectLabel              controllers.DeviceController.rejectLabel(host: String ?= "",module: String ?= "",time: String ?= "")
GET      /inf/confirmLabel             controllers.DeviceController.confirmLabel(host: String ?= "",module: String ?= "",time: String ?= "")

POST     /searchMonthOverview          controllers.DeviceController.getFormMonthPicker
GET      /searchMonthOverview          controllers.DeviceController.overview

GET      /searchBras                   controllers.DeviceController.search
